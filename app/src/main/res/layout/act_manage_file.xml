<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:id="@+id/Drawer"
    android:layout_height="match_parent"
    tools:context="com.example.finish.Act_Manage_file">
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/Edt_Namef"
        android:hint="Folder Name"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:maxLength="10"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_action_create"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/Edt_Rename"
        android:hint="Rename Folder"
        android:inputType="text"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/ic_action_rename"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center">

        <Button
            android:id="@+id/Btn_Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape3"
            android:onClick="BtnClick"
            android:padding="7dp"
            android:tag="Create_Folder"
            android:text="Create Folder" />

        <Button
            android:id="@+id/Btn_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape3"
            android:onClick="BtnClick"
            android:padding="7dp"
            android:tag="Delete_Folder"
            android:text="Delete Folder" />

        <Button
            android:id="@+id/Btn_Rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape3"
            android:onClick="BtnClick"
            android:padding="7dp"
            android:tag="Rename_Folder"
            android:text="Rename Folder" />
    </LinearLayout>



</LinearLayout>
